@model List<PortfolioBook.Areas.Admin.Models.UyeViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Kullanıcı Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.KullaniciAdi</td>
                    <td>@Html.ActionLink("Rol Değiştir", "RolAta", "Uye", new { id = item.UyeID }, new { @class = "btn btn-info" })</td>
                </tr>
            }
        }
    </tbody>
</table>
