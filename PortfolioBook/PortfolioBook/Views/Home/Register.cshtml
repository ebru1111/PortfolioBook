
@{
    ViewBag.Title = "Register";
}
<div class="container">
    <div class="col-md-6 offset-3" style="margin-top:50px;">
        @using (Html.BeginForm("Register", "Login", FormMethod.Post))
        {
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>İsim: </label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" required name="name" placeholder="Adınızı Giriniz..." class="form-control" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Soyisim: </label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" required name="surname" placeholder="Soyadınızı Giriniz..." class="form-control" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Kullanıcı Adı: </label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" required name="username" placeholder="Kullanıcı Adınızı Giriniz..." class="form-control" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Şifre: </label>
                    </div>
                    <div class="col-md-10">
                        <input type="password" required name="password" placeholder="Şifrenizi Giriniz..." class="form-control" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Erkek: </label>
                    </div>
                    <div class="col-md-10">
                        <input type="checkbox" name="gender" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Doğum Tarihi: </label>
                    </div>
                    <div class="col-md-10">
                        <input type="date" required name="birthdate" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                        <input type="submit" value="ÜYE OL" class="form-control btn btn-primary" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>